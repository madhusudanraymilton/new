<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_cli_record_tree" model="ir.ui.view">
            <field name="name">cli.record.list</field>
            <field name="model">cli.record</field>
            <field name="arch" type="xml">
                <list string="CLI Records">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="price"/>
                    <field name="available"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_cli_record_form" model="ir.ui.view">
            <field name="name">cli.record.form</field>
            <field name="model">cli.record</field>
            <field name="arch" type="xml">
                <form string="CLI Record">
                    <header>
                        <button name="%(cli.action_cli_wizard_with_context)d" string="Confirm" type="action" class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                               clickable="True"
                           statusbar_visible="draft,confirmed,in_progress,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="price"/>
                            <field name="available"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_cli_record" model="ir.actions.act_window">
            <field name="name">CLI Records</field>
            <field name="res_model">cli.record</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_cli_record" name="CLI Records" parent="menu_cli_root" action="action_cli_record"/>

    </data>
</odoo>
