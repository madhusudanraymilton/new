<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================ -->
        <!-- FORM VIEW: Add approval buttons and fields -->
        <!-- ============================================ -->
        <record id="view_hr_leave_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.form.inherit.two.layer</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">

                <!-- Add buttons in header -->
                <xpath expr="//header" position="inside">
                    <!-- Team Leader Approve Button -->
                    <button name="action_approve_team_leader"
                            string="Team Leader Approve"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'confirm'"
                            groups="two_layer_timeoff_approval.group_team_leader"/>

                    <!-- HR/Admin Final Approve Button -->
                    <button name="action_approve_hr"
                            string="Final Approve (HR)"
                            type="object"
                            class="btn-success"
                            invisible="state != 'validate1'"
                            groups="two_layer_timeoff_approval.group_hr_manager,two_layer_timeoff_approval.group_timeoff_administrator"/>

                    <!-- Refuse Button -->
                    <button name="action_refuse"
                            string="Refuse"
                            type="object"
                            class="btn-danger"
                            invisible="state not in ('confirm', 'validate1')"
                            groups="two_layer_timeoff_approval.group_team_leader,two_layer_timeoff_approval.group_hr_manager,two_layer_timeoff_approval.group_timeoff_administrator"/>
                </xpath>

                <!-- Add approval tracking fields -->
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="team_leader_approved_by" readonly="1"
                           invisible="not team_leader_approved_by"/>
                    <field name="team_leader_approved_date" readonly="1"
                           invisible="not team_leader_approved_date"/>
                    <field name="hr_approved_by" readonly="1"
                           invisible="not hr_approved_by"/>
                    <field name="hr_approved_date" readonly="1"
                           invisible="not hr_approved_date"/>
                </xpath>

            </field>
        </record>

        <!-- ============================================ -->
        <!-- TREE VIEW: Show state with validate1 -->
        <!-- ============================================ -->
        <record id="view_hr_leave_tree_inherit" model="ir.ui.view">
            <field name="name">hr.leave.tree.inherit.two.layer</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="decoration-info">state == 'validate1'</attribute>
                </xpath>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- KANBAN VIEW: Update state display -->
        <!-- ============================================ -->
        <record id="view_hr_leave_kanban_inherit" model="ir.ui.view">
            <field name="name">hr.leave.kanban.inherit.two.layer</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_kanban"/>
            <field name="arch" type="xml">
                <!-- Add validate1 state visualization -->
                <xpath expr="//field[@name='state']" position="after">
                    <field name="team_leader_approved_by"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>