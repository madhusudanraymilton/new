<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================ -->
        <!-- FORM VIEW: Add approval buttons and fields -->
        <!-- ============================================ -->
        <record id="view_hr_leave_form_inherit" model="ir.ui.view">
            <field name="name">hr.leave.form.inherit.two.layer</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
            <field name="arch" type="xml">

                <!-- Hide default approve button -->
                <xpath expr="//button[@name='action_approve']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Hide default refuse button -->
                <xpath expr="//button[@name='action_refuse']" position="replace">
                </xpath>

                <!-- Add custom buttons after the header statusbar -->
                <xpath expr="//header" position="inside">

                    <!-- Team Leader Approve Button -->
                    <button name="action_approve_team_leader"
                            string="Approve (Team Leader)"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'confirm'"
                            groups="two_layer_timeoff_approval.group_team_leader,two_layer_timeoff_approval.group_timeoff_administrator"/>

                    <!-- HR/Admin Final Approve Button -->
                    <button name="action_approve_hr"
                            string="Final Approve (HR)"
                            type="object"
                            class="btn-success"
                            invisible="state != 'validate1'"
                            groups="two_layer_timeoff_approval.group_hr_manager,two_layer_timeoff_approval.group_timeoff_administrator"/>

                    <!-- Admin Direct Approve (Bypass) -->
                    <button name="action_validate"
                            string="Direct Approve (Admin)"
                            type="object"
                            class="btn-warning"
                            invisible="state != 'confirm'"
                            groups="two_layer_timeoff_approval.group_timeoff_administrator"
                            confirm="This will bypass the two-layer approval process. Continue?"/>

                    <!-- Refuse Button -->
                    <button name="action_refuse"
                            string="Refuse"
                            type="object"
                            class="btn-danger"
                            invisible="state not in ('confirm', 'validate1')"
                            groups="two_layer_timeoff_approval.group_team_leader,two_layer_timeoff_approval.group_hr_manager,two_layer_timeoff_approval.group_timeoff_administrator"/>
                </xpath>

                <!-- Add approval tracking fields -->
                <xpath expr="//sheet" position="inside">
                    <group string="Approval Tracking" invisible="state in ('draft', 'cancel', 'refuse')" class="mt-3">
                        <group>
                            <field name="team_leader_approved_by"
                                   readonly="1"
                                   invisible="not team_leader_approved_by"/>
                            <field name="team_leader_approved_date"
                                   readonly="1"
                                   invisible="not team_leader_approved_date"/>
                        </group>
                        <group>
                            <field name="hr_approved_by"
                                   readonly="1"
                                   invisible="not hr_approved_by"/>
                            <field name="hr_approved_date"
                                   readonly="1"
                                   invisible="not hr_approved_date"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>


    </data>
</odoo>